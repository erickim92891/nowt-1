
<%= form_for(@user, :url => { :action => "update" }, html: {:class => 'form-signin'} ) do |f| %>
  <h3>Edit Email</h3>
  <div class="input-group">
    <span class="input-group-addon glyphicon glyphicon-envelope"></span>
    <%= f.email_field :email, class: 'form-control', placeholder: '@user.email', required: true %>
  </div>
  <div class="input-group">
    <span class="input-group-addon glyphicon glyphicon-lock"></span>
    <%= f.password_field :current_password, class: 'form-control', placeholder: 'Password', required: true %>
  </div>
  <%= f.submit "Update!", class: "btn btn-primary", id: "loginsubmit" %>
<% end %>



