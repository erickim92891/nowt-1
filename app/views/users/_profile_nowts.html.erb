<div class="row col-sm-12 col-md-12 col-lg-12">
	<div class="panel panel-default">
		<div class="panel-heading">
			<h4><%= title %></h4>
		</div>
		<div class="panel-body <%= class_name %>">
			<div class='row'>
                <div class='col-md-12'>
                    <div class="carousel slide media-carousel" id="<%= class_name %>-carousel">
                        <div class="carousel-inner">
                            <% post_counter = 1 %>
                            <% posts.each_slice(2) do |posts| %>
                                <% if post_counter == 1 %>
                                    <div class="item active">
                                <% else %>
                                    <div class="item">
                                <% end %>
                                        <div class="row">
                                            <% posts.each do |post| %>
                                                <%= link_to("/posts/#{post.id}", class:post) do %>
                                                    <% unless class_name == 'trending' %>                                    
                                                        <div class="col-md-6 col-lg-6">
                                                    <% else %>
                                                        <div class="col-md-12 col-md-12">
                                                    <% end %>
                                                            <%= render 'posts/nowt', post: post %>
                                                        </div> 
                                                <% end %> 
                                            <% end %>
                                        </div>
                                    </div>
                                <% post_counter += 1 %>
                            <% end %>
                        </div>
                        <% unless posts.empty? %>
                        <a data-slide="prev" href="#<%= class_name %>-carousel" class="left carousel-control">‹</a>
                        <a data-slide="next" href="#<%= class_name %>-carousel" class="right carousel-control">›</a>
                        <% end %>
                    </div>                          
                </div>
            </div>
	   </div>
	</div>
</div>

