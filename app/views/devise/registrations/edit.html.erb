<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :class => 'form-signin' }) do |f| %>

  <div class="input-group">
    <span class="input-group-addon glyphicon glyphicon-user"></span>
    <%= f.text_field :name, placeholder: "Change Username", class: 'form-control', autofocus: true %>
  </div>
  <div class="input-group">
    <span class="input-group-addon glyphicon glyphicon-envelope"></span>
    <%= f.email_field :email, class: 'form-control', placeholder: 'Change Email'%>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>


  <div class="input-group">
    <span class="input-group-addon glyphicon glyphicon-lock"></span>
    <%= f.password_field :password, class: 'form-control', placeholder: 'New Password', :autocomplete => "off" %>
  </div> 

  <div class="input-group">
    <span class="input-group-addon glyphicon glyphicon-lock"></span>
    <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'Confirm Password', :autocomplete => "off" %>
  </div> 

  <div class="input-group">
    <span class="input-group-addon glyphicon glyphicon-lock"></span>
    <%= f.password_field :current_password, class: 'form-control', placeholder: 'Current Password', :autocomplete => "off" %>
  </div> 

  <%= f.submit "Update", class: "btn btn-primary", id: "loginsubmit" %>

<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete %></p>

<%= link_to "Back", :back %>
