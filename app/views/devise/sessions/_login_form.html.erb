<%= form_for(resource, :as => resource_name, :url => login_path, html: {:class => 'form-signin'}, :role => "form", :id => 'login-nav') do |f| %>
	<div class="input-group">
 		<span class="input-group-addon glyphicon glyphicon-user"></span>
 		<%= f.text_field :login, :class => "form-control", :placeholder => "Username/Email", :autofocus => true, :required => true %>
	</div>
	<div class="input-group">
  		<span class="input-group-addon glyphicon glyphicon-lock"></span>
  		<%= f.password_field :password, :class => 'form-control', :placeholder => "Password", required: true %>
	</div>
	<div class="checkbox">
 		<label>
 		<% if devise_mapping.rememberable? %>
 			<div><%= f.check_box :remember_me %>Remember me</div>
 		<% end %>
 		<label>
	</div>
	<div class="form-group">
		<%= f.submit "Sign in", :class => "btn btn-success btn-block" %>
	</div>
<% end %>

