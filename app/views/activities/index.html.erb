
<style>
.timeline-badge .glyphicon {
  width: 50px;
  height: 50px;
  line-height: 50px;
  font-size: 1.4em;
  text-align: center;
  position: absolute;
  top: 0px;
  left: 50%;
  margin-left: -25px;
}

</style>


<div class="container">
	<div class="page-header">
	<h1 id="timeline">Activities</h1>
	</div>
	<ul class="timeline">
		<% @activities.each do |activity| %>
		<li>
			 <%= render_activity activity %>
				<div class="timeline-body">
					<% Post.find(activity.trackable_id).tags.each do |tag| %>
		                	<a class="smart-tags" href="/posts?q=<%= tag.name %>"><span class="label label-default"><%= tag.name %></span></a>
		            <% end %>
				</div>
			</div>
		</li>

		<% end %>
	</ul>
	<%= paginate @activities %>
</div>

