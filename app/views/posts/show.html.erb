<div class="container">
    <div class="row">
        <% if(!@post) %>
			<div class="alert alert-danger alert-dismissable">
				<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
				<strong>Warning!</strong> Nothing Found :[
			</div>
        <% else %>
			<div class="nowts-container col-md-8 col-lg-8 col-md-offset-2 col-lg-offset-2">
			    <%= render 'posts/nowt', :post => @post %>
				<%= commontator_thread(@post) %>
			</div>
        <% end %>
    </div>
</div> <!-- end container-->

